<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab6.DodajSamochodController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Konfigurator nowego samochodu" style="-fx-font-weight: bold;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <HBox spacing="20.0">
        <VBox spacing="10.0">
            <VBox spacing="5.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;">
                <Label text="DANE POJAZDU" style="-fx-font-weight: bold; -fx-text-fill: #555555;"/>
                <GridPane hgap="10" vgap="5">
                    <Label text="Model:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="modelInput" promptText="np. Porsche 911" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Rejestracja:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="plateInput" promptText="WA12345" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Waga auta (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="weightInput" text="1500" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <VBox spacing="5.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;">
                <Label text="WYBÓR SILNIKA" style="-fx-font-weight: bold; -fx-text-fill: #555555;"/>
                <GridPane hgap="10" vgap="5">
                    <Label text="Silnik:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="engineComboBox" prefWidth="160.0" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Wybierz silnik..."/>

                    <Label text="Info:" textFill="#777777" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label text="Parametry zostaną przypisane automatycznie" wrapText="true" maxWidth="150" style="-fx-font-size: 10;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </VBox>

        <VBox spacing="10.0">
            <VBox spacing="5.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;">
                <Label text="SKRZYNIA BIEGÓW" style="-fx-font-weight: bold; -fx-text-fill: #555555;"/>
                <GridPane hgap="10" vgap="5">
                    <Label text="Nazwa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="gearboxNameInput" text="Manualna 6b" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Cena:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="gearboxPriceInput" text="4000" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Waga (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="gearboxWeightInput" text="50" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Ilość biegów:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="maxGearsInput" text="6" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <VBox spacing="5.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;">
                <Label text="SPRZĘGŁO" style="-fx-font-weight: bold; -fx-text-fill: #555555;"/>
                <GridPane hgap="10" vgap="5">
                    <Label text="Nazwa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="clutchNameInput" text="Standard" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Cena:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="clutchPriceInput" text="1000" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Waga (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="clutchWeightInput" text="10" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </VBox>
    </HBox>

    <Separator/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Anuluj" onAction="#onCancelButton" prefWidth="80"/>
        <Button text="Dodaj pojazd" onAction="#onDodajButton"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
    </HBox>
</VBox>